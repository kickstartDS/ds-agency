{
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": false
  },
  "include": ["src/**/*", ".storybook/**/*"],
  "exclude": ["node_modules"]
}
