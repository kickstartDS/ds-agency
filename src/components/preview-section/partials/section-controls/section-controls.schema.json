{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/section-controls.schema.json",
  "title": "Section Controls",
  "type": "object",
  "properties": {
    "layoutToggle": {
      "type": "boolean",
      "title": "Layout Toggle",
      "description": "Toggle visible layout tiles",
      "default": false
    },
    "themeSwitch": {
      "type": "boolean",
      "title": "Invert Toggle",
      "description": "Toggle Invert",
      "default": false
    },
    "invertToggle": {
      "type": "boolean",
      "title": "Invert Toggle",
      "description": "Toggle Invert",
      "default": false
    }
  },
  "additionalProperties": false
}
