{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/preview-section.schema.json",
  "title": "Preview Section",
  "description": "Custom component based on Section with additional properties",
  "type": "object",
  "properties": {
    "preview": {
      "type": "object",
      "properties": {
        "title": {
          "$ref": "http://schema.mydesignsystem.com/section-header.schema.json#/properties/title"
        },
        "type": {
          "$ref": "http://schema.mydesignsystem.com/section-header.schema.json#/properties/type"
        },
        "link": {
          "$ref": "http://schema.mydesignsystem.com/section-header.schema.json#/properties/link"
        },
        "layoutToggle": {
          "type": "boolean",
          "title": "Content Layout",
          "description": "Toggle Content Wireframe",
          "default": false
        }
      }
    },
    "width": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/width"
    },
    "style": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/style"
    },
    "backgroundColor": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/backgroundColor"
    },
    "spotlight": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/spotlight"
    },
    "spaceBefore": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/spaceBefore"
    },
    "spaceAfter": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/spaceAfter"
    },
    "inverted": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/inverted"
    },
    "headline": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/headline"
    },
    "content": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/content"
    },
    "components": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/components"
    },
    "buttons": {
      "$ref": "http://schema.mydesignsystem.com/section.schema.json#/properties/buttons"
    }
  },
  "additionalProperties": false,
  "required": []
}
