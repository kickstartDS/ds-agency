{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/stat.schema.json",
  "title": "Stat",
  "description": "Stat entry of Stats component",
  "type": "object",
  "properties": {
    "number": {
      "title": "Number",
      "description": "The number of the stat",
      "type": "integer",
      "examples": [1, 2, 3, 4]
    },
    "description": {
      "title": "Description",
      "description": "Optional description of the stat",
      "type": "string",
      "format": "markdown"
    },
    "title": {
      "title": "Title",
      "description": "Title of the stat",
      "type": "string",
      "format": "markdown",
      "examples": ["Stat 1", "Stat 2", "Stat 3", "Stat 4"]
    }
  },
  "additionalProperties": false,
  "required": ["number", "label"],
  "examples": [
    {
      "number": 1,
      "label": "Stat 1"
    },
    {
      "number": 2,
      "label": "Stat 2"
    },
    {
      "number": 3,
      "label": "Stat 3"
    },
    {
      "value": 4,
      "label": "Stat 4"
    }
  ]
}
