{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/footer.schema.json",
  "title": "Footer",
  "type": "object",
  "properties": {
    "logo": {
      "$ref": "http://schema.kickstartds.com/base/picture.schema.json"
    },
    "logoHref": {
      "type": "string",
      "default": "/"
    },
    "navItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "href": { "type": "string" },
          "label": { "type": "string" },
          "target": { "type": "string" }
        },
        "additionalProperties": false,
        "required": ["href", "label"]
      },
      "examples": [
        [
          {
            "href": "#privacy-policy",
            "label": "Privacy policy"
          },
          {
            "href": "#changelog",
            "label": "Changelog"
          },
          {
            "href": "https://main--64f08cbba622af835d382b4f.chromatic.com/",
            "label": "Storybook",
            "target": "_blank"
          }
        ]
      ]
    }
  },
  "required": ["logo"],
  "additionalProperties": false
}
