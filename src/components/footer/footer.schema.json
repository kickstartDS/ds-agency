{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/footer.schema.json",
  "title": "Footer",
  "type": "object",
  "properties": {
    "logo": {
      "title": "Logo",
      "type": "object",
      "properties": {
        "src": {
          "title": "Source",
          "description": "Picture source",
          "type": "string",
          "format": "image",
          "examples": ["https://picsum.photos/seed/kdspicture/300/300"]
        },
        "alt": {
          "title": "Alt text",
          "description": "Alt text to display for picture",
          "type": "string"
        },
        "width": {
          "title": "Width",
          "description": "Width of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        },
        "height": {
          "title": "Height",
          "description": "Height of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        }
      },
      "additionalProperties": false
    },
    "logoHref": {
      "type": "string",
      "format": "uri",
      "default": "/"
    },
    "byline": {
      "title": "Byline",
      "description": "Small line of text displayed below the logo",
      "type": "string",
      "default": "Â© 2024 systemics Inc. All rights reserved."
    },
    "navItems": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "href": { "type": "string", "format": "uri" },
          "label": { "type": "string" },
          "target": { "type": "string" }
        },
        "additionalProperties": false,
        "required": ["href", "label"]
      },
      "examples": [
        [
          {
            "href": "#privacy-policy",
            "label": "Privacy policy"
          },
          {
            "href": "#changelog",
            "label": "Changelog"
          },
          {
            "href": "https://main--64f08cbba622af835d382b4f.chromatic.com/",
            "label": "Storybook",
            "target": "_blank"
          }
        ]
      ]
    }
  },
  "required": ["logo"],
  "additionalProperties": false
}
