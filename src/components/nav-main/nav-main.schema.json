{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/nav-main.schema.json",
  "title": "Nav Main",
  "type": "object",
  "properties": {
    "logo": {
      "title": "Logo",
      "type": "object",
      "properties": {
        "href": {
          "title": "Link",
          "description": "Add a link to the logo",
          "type": "string",
          "format": "uri",
          "default": "/"
        },
        "src": {
          "title": "Source",
          "description": "Logo file source",
          "type": "string",
          "format": "image",
          "examples": ["logo.svg"]
        },
        "srcInverted": {
          "title": "Source Inverted",
          "description": "Logo inverted file source",
          "type": "string",
          "format": "image",
          "examples": ["logo-inverted.svg"]
        },
        "alt": {
          "title": "Alt text",
          "description": "Alt text to display for picture",
          "type": "string"
        },
        "width": {
          "title": "Width",
          "description": "Width of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        },
        "height": {
          "title": "Height",
          "description": "Height of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        }
      },
      "additionalProperties": false
    },
    "logoHref": {
      "type": "string",
      "format": "uri",
      "default": "/"
    },
    "flyoutLogoInverted": {
      "type": "boolean",
      "title": "Flyout Logo Inverted",
      "description": "Toggle the inversion of the logo inside the mobile navigation",
      "default": false
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "href": { "type": "string", "format": "uri" },
          "label": { "type": "string" },
          "active": { "type": "boolean" }
        },
        "additionalProperties": false,
        "required": ["href", "label"]
      },
      "examples": [
        [
          {
            "label": "Nav Item",
            "href": "#"
          },
          {
            "label": "Active Item",
            "href": "#",
            "active": true
          },
          {
            "label": "Another Item",
            "href": "#"
          },
          {
            "label": "One more Item",
            "href": "#"
          },
          {
            "label": "Last Item",
            "href": "#"
          }
        ]
      ]
    }
  },
  "additionalProperties": false,
  "required": ["logo"]
}
