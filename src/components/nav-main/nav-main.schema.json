{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/nav-main.schema.json",
  "title": "Nav Main",
  "type": "object",
  "properties": {
    "logo": {
      "$ref": "http://schema.kickstartds.com/base/picture.schema.json"
    },
    "logoHref": {
      "type": "string",
      "format": "uri",
      "default": "/"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "href": { "type": "string", "format": "uri" },
          "label": { "type": "string" },
          "active": { "type": "boolean" }
        },
        "additionalProperties": false,
        "required": ["href", "label"]
      },
      "examples": [
        [
          {
            "label": "Nav Item",
            "href": "#"
          },
          {
            "label": "Active Item",
            "href": "#",
            "active": true
          },
          {
            "label": "Another Item",
            "href": "#"
          },
          {
            "label": "One more Item",
            "href": "#"
          },
          {
            "label": "Last Item",
            "href": "#"
          }
        ]
      ]
    }
  },
  "additionalProperties": false,
  "required": ["logo"]
}
