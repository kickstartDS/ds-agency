{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/stats.schema.json",
  "title": "Stats",
  "description": "Display a set of stats in a grid",
  "type": "object",
  "properties": {
    "stat": {
      "type": "array",
      "title": "Stats",
      "description": "The stats to display in a grid",
      "items": {
        "type": "object",
        "title": "Stat",
        "properties": {
          "number": {
            "title": "Number",
            "description": "The number of the stat",
            "type": "integer",
            "examples": [1, 2, 3, 4]
          },
          "description": {
            "title": "Description",
            "description": "Optional description of the stat",
            "type": "string"
          },
          "title": {
            "title": "Title",
            "description": "Title of the stat",
            "type": "string",
            "examples": ["Stat 1", "Stat 2", "Stat 3", "Stat 4"]
          }
        },
        "additionalProperties": false,
        "required": ["number", "label"],
        "examples": [
          {
            "number": 1,
            "label": "Stat 1"
          },
          {
            "number": 2,
            "label": "Stat 2"
          },
          {
            "number": 3,
            "label": "Stat 3"
          },
          {
            "value": 4,
            "label": "Stat 4"
          }
        ]
      },
      "minItems": 1,
      "maxItems": 4
    }
  },
  "additionalProperties": false,
  "required": ["stats"]
}
