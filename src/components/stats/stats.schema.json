{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/stats.schema.json",
  "title": "Stats",
  "description": "Display a set of stats in a grid",
  "type": "object",
  "properties": {
    "stats": {
      "type": "array",
      "title": "Stats",
      "description": "The stats to display in a grid",
      "items": {
        "type": "object",
        "title": "Stat",
        "properties": {
          "value": {
            "title": "Value",
            "description": "The value of the stat",
            "type": "string",
            "examples": ["1", "2", "3", "4"]
          },
          "icon": {
            "title": "Icon",
            "description": "The icon of the stat",
            "type": "string",
            "examples": ["person", "home", "map"]
          },
          "label": {
            "title": "Label",
            "description": "The label of the stat",
            "type": "string",
            "examples": ["Stat 1", "Stat 2", "Stat 3", "Stat 4"]
          },
          "description": {
            "title": "Label",
            "description": "The description of the stat",
            "type": "string"
          }
        },
        "required": ["value", "label"],
        "examples": [
          {
            "value": 1,
            "label": "Stat 1"
          },
          {
            "value": 2,
            "label": "Stat 2"
          },
          {
            "value": 3,
            "label": "Stat 3"
          },
          {
            "value": 4,
            "label": "Stat 4"
          }
        ]
      },
      "minimum": 1,
      "maximum": 4
    }
  },
  "required": ["stats"]
}
