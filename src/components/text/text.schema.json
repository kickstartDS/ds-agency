{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/text-chapter.schema.json",
  "title": "Text",
  "description": "Component used for displaying text in chapters",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "title": "Text Style",
      "description": "Text",
      "examples": [""]
    },
    "layoutVariant": {
      "type": "string",
      "title": "Layout Variant",
      "description": "Variant of layout to be used",
      "enum": ["singleColumn", "multiColumn"],
      "default": "singleColumn"
    },
    "textStyle": {
      "type": "string",
      "title": "Text Style",
      "description": "Style of the text",
      "enum": ["highlight", "default"],
      "default": "normal"
    }
  },
  "required": ["layoutVariant", "features"]
}
