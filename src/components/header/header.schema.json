{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/header.schema.json",
  "title": "Header",
  "type": "object",
  "properties": {
    "logo": {
      "$ref": "http://schema.mydesignsystem.com/nav-main.schema.json#/properties/logo"
    },
    "logoHref": {
      "$ref": "http://schema.mydesignsystem.com/nav-main.schema.json#/properties/logoHref"
    },
    "flyoutLogoInverted": {
      "$ref": "http://schema.mydesignsystem.com/nav-main.schema.json#/properties/flyoutLogoInverted"
    },
    "floating": {
      "type": "boolean",
      "title": "Floating",
      "description": "Make the header float over the first Section",
      "default": false
    },
    "inverted": {
      "type": "boolean",
      "title": "Inverted",
      "description": "Invert the color scheme of the header",
      "default": false
    },
    "navItems": {
      "$ref": "http://schema.mydesignsystem.com/nav-main.schema.json#/properties/items"
    }
  },
  "additionalProperties": false,
  "required": ["logo"]
}
