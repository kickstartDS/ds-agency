{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://schema.mydesignsystem.com/header.schema.json",
  "title": "Header",
  "type": "object",
  "properties": {
    "logo": {
      "title": "Logo",
      "type": "object",
      "properties": {
        "src": {
          "title": "Source",
          "description": "Logo file source",
          "type": "string",
          "format": "image",
          "examples": ["logo.svg"]
        },
        "srcInverted": {
          "title": "Source Inverted",
          "description": "Logo inverted file source",
          "type": "string",
          "format": "image",
          "examples": ["logo-inverted.svg"]
        },
        "alt": {
          "title": "Alt text",
          "description": "Alt text to display for picture",
          "type": "string"
        },
        "width": {
          "title": "Width",
          "description": "Width of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        },
        "height": {
          "title": "Height",
          "description": "Height of the picture",
          "type": "integer",
          "minimum": 0,
          "examples": [300]
        }
      },
      "additionalProperties": false
    },
    "logoHref": {
      "$ref": "http://schema.mydesignsystem.com/nav-main.schema.json#/properties/logoHref"
    },
    "floating": {
      "type": "boolean",
      "title": "Floating",
      "description": "Make the header float over the first Section",
      "default": false
    },
    "inverted": {
      "type": "boolean",
      "title": "Inverted",
      "description": "Invert the color scheme of the header",
      "default": false
    },
    "navItems": {
      "$ref": "http://schema.mydesignsystem.com/nav-main.schema.json#/properties/items"
    }
  },
  "additionalProperties": false,
  "required": ["logo"]
}
