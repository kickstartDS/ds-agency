{
  "name": "@kickstartds/ds-starter",
  "version": "1.0.0",
  "description": "",
  "homepage": "https://github.com/kickstartDS/ds-starter#readme",
  "bugs": {
    "url": "https://github.com/kickstartDS/ds-starter/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kickstartDS/ds-starter.git"
  },
  "license": "(MIT OR Apache-2.0)",
  "author": "Jonas Ulrich <jonas.ulrich@kickstartds.com> (https://www.kickstartDS.com/)",
  "main": "index.js",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-storybook": "yarn build-tokens && run-p sass schema && storybook build --output-dir storybook",
    "build-tokens": "kickstartDS tokens compile",
    "chromatic": "chromatic --storybook-build-dir 'storybook' --skip \"@(renovate/**|dependabot/**)\" --exit-zero-on-changes --exit-once-uploaded",
    "dist:components": "node scripts/bundleComponents.js",
    "dist:fonts": "cp -r static/fonts dist/",
    "dist:iconsprite": "mkdir -p dist/components && cp src/token/icons/IconSprite.js dist/components/",
    "dist:images": "cp -r static/img static/logo.svg dist/",
    "dist:favicons": "cp -r static/favicon dist/",
    "dist:sass": "sass --load-path=node_modules src/dist.scss dist/index.css",
    "dist:schema": "yarn schema && node scripts/copySchema.js && yarn tsc",
    "dist:js": "esbuild index=src/dist.js --outdir=dist --format=esm --bundle --minify --splitting",
    "init-tokens": "kickstartDS tokens init",
    "playroom": "run-p watch:* playroom:start",
    "playroom:start": "playroom start",
    "playroom:build": "playroom build",
    "prepare": "patch-package",
    "prepublishOnly": "rm -rf dist && mkdir -p dist && yarn build-tokens && run-p dist:*",
    "sass": "sass --load-path=node_modules src/index.scss static/index.css",
    "schema": "run-p schema:*",
    "schema:dereference-schemas": "kickstartDS schema dereference --schema-domain schema.mydesignsystem.com",
    "schema:generate-props": "kickstartDS schema types --schema-domain schema.mydesignsystem.com",
    "start": "run-p watch:* storybook",
    "storybook": "storybook dev -p 6006",
    "token": "node scripts/customPropertyExtract.js",
    "watch:sass": "yarn sass --watch",
    "watch:schema": "yarn schema && chokidar \"src/**/*.schema.json\" -c \"yarn schema\"",
    "watch:token": "yarn build-tokens && yarn token && chokidar \"src/**/*-tokens.scss\" -c \"yarn token {path}\"",
    "watch:dictionary": "chokidar \"src/token/dictionary/*.json\" -c \"yarn build-tokens\""
  },
  "resolutions": {
    "@types/react": "17.0.2"
  },
  "dependencies": {
    "@bedrock-layout/primitives": "^3.0.20",
    "@bedrock-layout/spacing-constants": "^3.2.5",
    "@kickstartds/base": "^2.2.0",
    "@kickstartds/content": "^2.1.0",
    "@kickstartds/core": "^2.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.7"
  },
  "devDependencies": {
    "@auto-it/npm": "^11.0.1",
    "@auto-it/released": "^11.0.1",
    "@kickstartds/storybook-addon-component-tokens": "1.0.0-canary.18.36.0",
    "@kickstartds/storybook-addon-jsonschema": "^1.0.6",
    "@storybook/addon-a11y": "^7.3.2",
    "@storybook/addon-actions": "^7.3.2",
    "@storybook/addon-essentials": "^7.3.2",
    "@storybook/addon-links": "^7.3.2",
    "@storybook/react": "^7.3.2",
    "@storybook/react-vite": "^7.3.2",
    "@whitespace/storybook-addon-html": "git+https://github.com/lmestel/storybook-addon-html.git",
    "auto": "^11.0.1",
    "change-case": "^4.1.2",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.24.0",
    "copy-webpack-plugin": "^11.0.0",
    "custom-property-extract": "^1.2.1",
    "deepmerge": "^4.3.1",
    "esbuild": "^0.19.2",
    "fast-glob": "^3.3.1",
    "fs-extra": "^11.1.1",
    "json-schema-merge-allof": "^0.8.1",
    "json-schema-ref-parser": "^9.0.9",
    "json-schema-to-typescript": "^13.0.2",
    "kickstartds": "^2.1.0",
    "lazysizes": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "playroom": "^0.32.1",
    "sass": "^1.66.1",
    "sass-loader": "^13.3.2",
    "storybook": "^7.3.2",
    "storybook-addon-playroom": "^4.0.0",
    "storybook-design-token": "3.0.0-beta.3",
    "typescript": "^5.2.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
